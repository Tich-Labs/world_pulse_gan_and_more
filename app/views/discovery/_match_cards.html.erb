<% if matches.any? %>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% matches.each do |profile| %>
      <div class="bg-white rounded-lg shadow p-4 hover:shadow-md transition-shadow">
        <div class="flex items-start space-x-3 mb-3">
          <div class="w-12 h-12 rounded-full bg-primary-custom flex items-center justify-center text-white font-bold">
            <%= profile.user.name.first.upcase %>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900"><%= profile.user.name %></h3>
            <p class="text-sm text-gray-500">Member since <%= profile.user.created_at.strftime('%b %Y') %></p>
          </div>
        </div>

        <div class="space-y-2 mb-4">
          <% profile.match_type.fields_for_side(profile.user.side).first(3).each do |field| %>
            <div class="text-sm">
              <span class="text-gray-500"><%= field.name %>:</span>
              <span class="text-gray-900 ml-1"><%= render_profile_field_readonly(field, profile.data) %></span>
            </div>
          <% end %>
        </div>

        <div class="flex gap-2">
          <%= link_to "View Profile", profile_path(profile), class: "flex-1 btn-secondary-custom text-sm py-2 text-center" %>
          <% if current_user %>
            <%= button_to "Connect", "#", class: "flex-1 btn-primary-custom text-sm py-2", 
                data: { profile_id: profile.id, user_id: profile.user.id } %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-12">
    <p class="text-gray-500 text-lg">No matches found</p>
    <p class="text-gray-400">Try adjusting your filters or check back later</p>
  </div>
<% end %>
