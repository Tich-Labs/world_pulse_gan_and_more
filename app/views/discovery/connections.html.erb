<% content_for :title, "My Connections - Mentorship Matchmaker" %>

<div class="container mx-auto py-8 px-4">
  <div class="mb-8">
    <h1 class="text-2xl font-bold">My Connections</h1>
    <p class="text-gray-600">Manage your connection requests</p>
  </div>

  <div class="grid gap-8">
    <!-- Pending Requests -->
    <div>
      <h2 class="text-xl font-semibold mb-4">Pending Requests</h2>
      <% if @pending.any? %>
        <div class="space-y-4">
          <% @pending.each do |match| %>
            <% other_user = match.other_user(current_user) %>
            <div class="bg-white rounded-lg shadow p-4 flex justify-between items-center">
              <div class="flex items-center space-x-3">
                <div class="w-12 h-12 rounded-full bg-primary-custom flex items-center justify-center text-white font-bold">
                  <%= other_user.name.first.upcase %>
                </div>
                <div>
                  <h3 class="font-semibold"><%= other_user.name %></h3>
                  <p class="text-sm text-gray-500">Pending since <%= match.created_at.strftime('%b %d') %></p>
                </div>
              </div>
              <div class="flex gap-2">
                <%= button_to "Accept", "#", class: "btn-primary-custom text-sm py-2 px-4" %>
                <%= button_to "Decline", "#", class: "btn-secondary-custom text-sm py-2 px-4" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">No pending requests</p>
      <% end %>
    </div>

    <!-- Active Connections -->
    <div>
      <h2 class="text-xl font-semibold mb-4">Active Connections</h2>
      <% if @accepted.any? %>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @accepted.each do |match| %>
            <% other_user = match.other_user(current_user) %>
            <% existing_review = Review.find_by(match: match, reviewer: current_user) %>
            <div class="bg-white rounded-lg shadow p-4">
              <div class="flex items-center space-x-3 mb-3">
                <div class="w-10 h-10 rounded-full bg-primary-custom flex items-center justify-center text-white font-bold">
                  <%= other_user.name.first.upcase %>
                </div>
                <div>
                  <h3 class="font-semibold"><%= other_user.name %></h3>
                  <% if other_user.total_reviews > 0 %>
                    <div class="flex items-center text-sm text-gray-500">
                      <span class="text-yellow-500 mr-1">★</span>
                      <%= other_user.average_rating %> (<%= other_user.total_reviews %>)
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="flex gap-2 mb-3">
                <% conversation = Conversation.find_by(match: match) %>
                <% if conversation %>
                  <%= link_to "Message", conversation_path(conversation), class: "flex-1 btn-primary-custom text-sm py-2 text-center" %>
                <% else %>
                  <%= button_to "Start Chat", conversations_path(conversation: { match_id: match.id }), method: :post, class: "flex-1 btn-primary-custom text-sm py-2" %>
                <% end %>
              </div>
              <% unless existing_review %>
                <button type="button" class="w-full btn-secondary-custom text-sm py-2" onclick="document.getElementById('review-form-<%= match.id %>').classList.toggle('hidden')">
                  Leave a Review
                </button>
                <div id="review-form-<%= match.id %>" class="hidden mt-3 pt-3 border-t">
                  <%= form_with model: Review.new, url: reviews_path, local: true do |f| %>
                    <%= f.hidden_field :match_id, value: match.id %>
                    <%= f.hidden_field :user_id, value: other_user.id %>
                    <div class="mb-2">
                      <label class="block text-sm font-medium text-gray-700 mb-1">Rating</label>
                      <div class="flex gap-1">
                        <% 5.times do |i| %>
                          <label>
                            <%= radio_button_tag 'review[rating]', i + 1, false, class: "hidden" %>
                            <span class="text-2xl cursor-pointer text-gray-300 hover:text-yellow-400" onclick="this.parentElement.previousElementSibling.checked = true; this.parentElement.parentElement.querySelectorAll('span').forEach((s, idx) => s.classList.toggle('text-yellow-400', idx <= <%= i %>))">★</span>
                          </label>
                        <% end %>
                      </div>
                    </div>
                    <div class="mb-2">
                      <%= f.text_area :comment, placeholder: "Share your experience...", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-primary-custom focus:ring-primary-custom text-sm", rows: 2 %>
                    </div>
                    <%= f.submit "Submit Review", class: "w-full btn-primary-custom text-sm py-2" %>
                  <% end %>
                </div>
              <% else %>
                <div class="text-center text-sm text-gray-500 py-2">
                  You reviewed this connection
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">No active connections yet</p>
      <% end %>
    </div>
  </div>
</div>
