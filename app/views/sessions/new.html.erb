<% content_for :title, "Sign In - Mentorship Matchmaker" %>

<div class="login-page">
  <div class="container mx-auto py-8 px-4">
    <div class="max-w-md mx-auto">
      <div class="text-center mb-8">
        <h1>Sign In</h1>
        <p class="text-muted">Sign in to help with projects</p>
      </div>

      <div class="card-custom">
        <% if flash[:alert] %>
          <div class="alert alert-error">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <form action="/session" method="POST">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="hidden" name="project_id" value="<%= @project_id %>">
          
          <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" class="input-custom" placeholder="your@email.com" required>
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="input-custom" placeholder="Your password" required>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn-primary-custom w-full">Sign In</button>
          </div>

          <p class="text-center mt-4 text-sm text-muted">
            Don't have an account? <a href="/users/new?project_id=<%= @project_id %>" class="text-primary">Create one</a>
          </p>
        </form>
      </div>
    </div>
  </div>
</div>
