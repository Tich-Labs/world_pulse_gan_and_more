<% content_for :title, "Edit Profile - Mentorship Matchmaker" %>

<div class="container mx-auto py-8 px-4">
  <div class="max-w-2xl mx-auto">
    <div class="mb-6">
      <h1 class="text-2xl font-bold">Edit Your Profile</h1>
      <p class="text-gray-600">as <%= current_user.side_label(@profile.match_type) %></p>
    </div>

    <% if @fields.empty? %>
      <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
        <p class="text-yellow-800">No profile fields configured yet. Contact your administrator.</p>
      </div>
    <% else %>
      <%= form_with(model: @profile, url: profile_path(@profile), local: true) do |f| %>
        <div class="space-y-6">
          <% @fields.each do |field| %>
            <div>
              <%= render_profile_field(field, f, @profile.data) %>
              <% if field.required? %>
                <p class="mt-1 text-xs text-red-500">Required</p>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="mt-8 flex justify-end">
          <%= f.submit "Save Profile", class: "btn-primary-custom" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
