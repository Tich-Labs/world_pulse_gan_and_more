<form method="get" class="mb-4 flex items-center gap-2 flex-wrap">
  <div class="flex items-center gap-2">
    <input name="q" value="<%= params[:q] %>" placeholder="<%= (local_assigns[:placeholder] || 'Search...') %>" class="border rounded px-3 py-1 <%= (local_assigns[:width] || 'w-64') %>" />
    <button type="submit" style="background-color: #5B9EA6; color: #fff;" class="px-3 py-1 rounded">Search</button>
  </div>
  <% if local_assigns[:extra_html] %>
    <div class="ml-2">
      <%= local_assigns[:extra_html] %>
    </div>
  <% end %>
</form>
