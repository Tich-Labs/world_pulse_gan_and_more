<% content_for :title, "Stories - Admin" %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Stories</h1>

  <div class="bg-white rounded-lg shadow overflow-x-auto">
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Author</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Votes</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @stories.each do |story| %>
          <tr>
            <td class="px-6 py-4"><%= story.id %></td>
            <td class="px-6 py-4"><%= truncate(story.title, length: 50) %></td>
            <td class="px-6 py-4"><%= story.author_name %></td>
            <td class="px-6 py-4"><%= story.votes %></td>
            <td class="px-6 py-4"><%= story.created_at.strftime("%Y-%m-%d") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-4">
    <a href="/admin" class="text-blue-600 hover:underline">&larr; Back to Admin</a>
  </div>
</div>
