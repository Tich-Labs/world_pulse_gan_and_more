<% content_for :title, "Stories - Admin" %>

<div class="flex items-center justify-between mb-4">
  <form method="get" class="flex items-center gap-2">
    <input name="q" value="<%= params[:q] %>" placeholder="Search stories..." class="border rounded px-3 py-1" />
    <button type="submit" class="bg-purple-600 text-white px-3 py-1 rounded">Search</button>
  </form>
  <!-- Import Form -->
  <form action="/admin/import-stories" method="post" enctype="multipart/form-data" data-turbo="false" class="flex items-center gap-2">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="file" name="csv_file" accept=".csv" required class="border rounded px-2 py-1 text-sm">
    <button type="submit" class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 text-sm">Import CSV</button>
  </form>
</div>

<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4"><%= notice %></div>
<% end %>

<% if alert %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"><%= alert %></div>
<% end %>

<%= pagy_tailwind_nav(@pagy) if defined?(@pagy) %>

<div class="bg-white rounded-lg shadow max-h-[calc(100vh-14rem)] overflow-auto">
  <table class="min-w-full">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Author</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Votes</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @stories.each do |story| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4"><%= story.id %></td>
          <td class="px-6 py-4"><%= truncate(story.title, length: 40) %></td>
          <td class="px-6 py-4"><%= story.author %></td>
          <td class="px-6 py-4"><%= story.votes %></td>
          <td class="px-6 py-4"><%= story.created_at.strftime("%Y-%m-%d") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= pagy_tailwind_nav(@pagy) if defined?(@pagy) %>
