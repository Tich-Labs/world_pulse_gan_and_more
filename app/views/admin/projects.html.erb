<% content_for :title, "Projects - Admin" %>

<div class="p-8">
  <h1 class="text-3xl font-bold mb-6">Projects</h1>

  <div class="bg-white rounded-lg shadow overflow-x-auto">
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Description</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Votes</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @projects.each do |project| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4"><%= project.id %></td>
            <td class="px-6 py-4"><%= project.title %></td>
            <td class="px-6 py-4"><%= truncate(project.description, length: 50) %></td>
            <td class="px-6 py-4"><%= project.votes %></td>
            <td class="px-6 py-4"><%= project.created_at.strftime("%Y-%m-%d") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
