<% content_for :title, "Messages - Admin" %>

<%= render 'admin/search_form', placeholder: 'Search messages (id or text)...', width: 'w-64', show_button: true %>

<%= pagy_tailwind_nav(@pagy) if defined?(@pagy) %>

<div class="bg-white rounded-lg shadow max-h-[calc(100vh-14rem)] overflow-auto">
  <table class="min-w-full">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">From</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">To</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Content</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @messages.each do |message| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4"><%= message.id %></td>
          <td class="px-6 py-4"><%= message.sender_id %></td>
          <td class="px-6 py-4"><%= message.receiver_id %></td>
          <td class="px-6 py-4"><%= truncate(message.content, length: 50) %></td>
          <td class="px-6 py-4"><%= message.created_at.strftime("%Y-%m-%d") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= pagy_tailwind_nav(@pagy) if defined?(@pagy) %>
