<% content_for :title, "Roadmap Ideas - Admin" %>

<div class="flex items-center justify-between mb-4">
  <%= render 'admin/search_form', placeholder: 'Search roadmap ideas...', width: 'w-64', show_button: true, extra_html: (
    capture do %>
      <select name="idea_type" class="border rounded px-2 py-1">
        <option value="">All types</option>
        <% RoadmapIdea.distinct.pluck(:idea_type).compact.each do |it| %>
          <option value="<%= it %>" <%= 'selected' if params[:idea_type] == it %>><%= it %></option>
        <% end %>
      </select>
      <button type="submit" style="background-color:#5B9EA6;color:#fff;" class="px-3 py-1 rounded">Filter</button>
    <% end
  ) %>
  <!-- Import Form -->
  <form action="/admin/import-roadmap-ideas" method="post" enctype="multipart/form-data" data-turbo="false" class="flex items-center gap-2">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="file" name="csv_file" accept=".csv" required class="border rounded px-2 py-1 text-sm">
    <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 text-sm">Import CSV</button>
  </form>
</div>

<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4"><%= notice %></div>
<% end %>

<% if alert %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"><%= alert %></div>
<% end %>

<%= pagy_tailwind_nav(@pagy) if defined?(@pagy) %>

<div class="bg-white rounded-lg shadow max-h-[calc(100vh-14rem)] overflow-auto">
  <table class="min-w-full">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Category</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @roadmap_ideas.each do |idea| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4"><%= idea.id %></td>
          <td class="px-6 py-4"><%= truncate(idea.name, length: 50) %></td>
          <td class="px-6 py-4"><span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs"><%= idea.idea_type.presence || 'general' %></span></td>
          <td class="px-6 py-4"><%= idea.created_at.strftime("%Y-%m-%d") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= pagy_tailwind_nav(@pagy) if defined?(@pagy) %>
