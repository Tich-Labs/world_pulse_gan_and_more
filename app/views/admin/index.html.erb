<% content_for :title, "Admin Dashboard - World Pulse Plus" %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Admin Dashboard</h1>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
    <a href="/admin/users" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg">
      <div class="text-4xl font-bold text-blue-600"><%= @user_count %></div>
      <div class="text-gray-600">Users</div>
    </a>
    <a href="/admin/projects" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg">
      <div class="text-4xl font-bold text-green-600"><%= @project_count %></div>
      <div class="text-gray-600">Projects</div>
    </a>
    <a href="/admin/stories" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg">
      <div class="text-4xl font-bold text-purple-600"><%= @story_count %></div>
      <div class="text-gray-600">Stories</div>
    </a>
    <a href="/admin/messages" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg">
      <div class="text-4xl font-bold text-orange-600"><%= @message_count %></div>
      <div class="text-gray-600">Messages</div>
    </a>
    <a href="/admin/roadmap_ideas" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg">
      <div class="text-4xl font-bold text-red-600"><%= @roadmap_idea_count %></div>
      <div class="text-gray-600">Roadmap Ideas</div>
    </a>
    <a href="/admin/training_requests" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg">
      <div class="text-4xl font-bold text-teal-600"><%= @training_request_count %></div>
      <div class="text-gray-600">Training Requests</div>
    </a>
    <a href="/admin/training_offerings" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg">
      <div class="text-4xl font-bold text-indigo-600"><%= @training_offering_count %></div>
      <div class="text-gray-600">Training Offerings</div>
    </a>
  </div>

  <div class="mt-8">
    <a href="/" class="text-blue-600 hover:underline">&larr; Back to Home</a>
  </div>
</div>
