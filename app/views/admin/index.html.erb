    <div class="text-gray-800 mt-2 font-bold">Roadmap Ideas</div>
  </a>
  
  <a href="/admin/training-requests" aria-label="<%= @training_request_count %> training requests" class="block p-4 bg-white rounded-lg shadow hover:shadow-lg transition flex flex-col items-center justify-center gap-2 h-28 text-center focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2" style="border-left:4px solid #85C88A;">
    <div class="w-28 text-center px-3 py-1 rounded-md text-2xl font-extrabold" style="background-color: rgba(133,200,138,0.18); color: #0c5a17;" aria-hidden="true"><%= @training_request_count %></div>
    <div class="text-gray-800 mt-2 font-bold">Training Requests</div>
  </a>
  
  <a href="/admin/training-offerings" aria-label="<%= @training_offering_count %> training offerings" class="block p-4 bg-white rounded-lg shadow hover:shadow-lg transition flex flex-col items-center justify-center gap-2 h-28 text-center focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2" style="border-left:4px solid #5B9EA6;">
    <div class="w-28 text-center px-3 py-1 rounded-md text-2xl font-extrabold" style="background-color: rgba(91,158,166,0.18); color: #155a5e;" aria-hidden="true"><%= @training_offering_count %></div>
    <div class="text-gray-800 mt-2 font-bold">Training Offerings</div>
  </a>
</div>

<div class="mt-12">
  <h2 class="text-2xl font-bold mb-6">Quick Actions</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Import Stories -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold mb-4">ðŸ“– Import Stories from CSV</h3>
      <form action="/admin/import-stories" method="post" enctype="multipart/form-data">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">Select CSV File</label>
          <input type="file" name="csv_file" accept=".csv" required class="block w-full border rounded px-3 py-2">
        </div>
        <p class="text-xs text-gray-500 mb-4">CSV columns: title, content, author</p>
        <button type="submit" class="w-full text-white px-4 py-2 rounded hover:opacity-90" style="background-color: #5B9EA6;">Import Stories</button>
      </form>
    </div>

    <!-- Import Roadmap Ideas -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold mb-4">ðŸ’¡ Import Roadmap Ideas from CSV</h3>
      <form action="/admin/import-roadmap-ideas" method="post" enctype="multipart/form-data">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">Select CSV File</label>
          <input type="file" name="csv_file" accept=".csv" required class="block w-full border rounded px-3 py-2">
        </div>
        <p class="text-xs text-gray-500 mb-4">CSV columns: title, description, category</p>
        <button type="submit" class="w-full text-white px-4 py-2 rounded hover:opacity-90" style="background-color: #E8A87C;">Import Roadmap Ideas</button>
      </form>
    </div>
  </div>
</div>
