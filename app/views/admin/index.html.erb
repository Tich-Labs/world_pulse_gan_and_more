<% content_for :title, "Admin Dashboard - Mentorship Matchmaker" %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
  <a href="/admin/users" aria-label="<%= @user_count %> users" class="block p-4 bg-white rounded-lg shadow hover:shadow-lg transition flex flex-col items-center justify-center gap-2 h-28 text-center focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2" style="border-left:4px solid #5B9EA6;">
    <div class="w-28 text-center px-3 py-1 rounded-md text-2xl font-extrabold" style="background-color: rgba(91,158,166,0.18); color: #155a5e;" aria-hidden="true"><%= @user_count %></div>
    <div class="text-gray-800 mt-2 font-bold">Users</div>
  </a>
  
  <a href="/admin/projects" aria-label="<%= @project_count %> projects" class="block p-4 bg-white rounded-lg shadow hover:shadow-lg transition flex flex-col items-center justify-center gap-2 h-28 text-center focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2" style="border-left:4px solid #85C88A;">
    <div class="w-28 text-center px-3 py-1 rounded-md text-2xl font-extrabold" style="background-color: rgba(133,200,138,0.18); color: #11601d;" aria-hidden="true"><%= @project_count %></div>
    <div class="text-gray-800 mt-2 font-bold">Projects</div>
  </a>
  
