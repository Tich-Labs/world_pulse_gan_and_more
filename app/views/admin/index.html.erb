  </a>
  
  <a href="/admin/messages" aria-label="<%= @message_count %> messages" class="block p-4 bg-white rounded-lg shadow hover:shadow-lg transition flex flex-col items-center justify-center gap-2 h-28 text-center focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2" style="border-left:4px solid #5B9EA6;">
    <div class="w-28 text-center px-3 py-1 rounded-md text-2xl font-extrabold" style="background-color: rgba(91,158,166,0.18); color: #155a5e;" aria-hidden="true"><%= @message_count %></div>
    <div class="text-gray-800 mt-2 font-bold">Messages</div>
  </a>
  
