<% content_for :title, "Admin Dashboard - World Pulse Plus" %>

<h1 class="text-3xl font-bold mb-8">Admin Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
  <a href="/admin/users" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg transition border-l-4 border-blue-500">
    <div class="text-4xl font-bold text-blue-600"><%= @user_count %></div>
    <div class="text-gray-600 mt-2 font-semibold">Users</div>
  </a>
  
  <a href="/admin/projects" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg transition border-l-4 border-green-500">
    <div class="text-4xl font-bold text-green-600"><%= @project_count %></div>
    <div class="text-gray-600 mt-2 font-semibold">Projects</div>
  </a>
  
  <a href="/admin/stories" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg transition border-l-4 border-purple-500">
    <div class="text-4xl font-bold text-purple-600"><%= @story_count %></div>
    <div class="text-gray-600 mt-2 font-semibold">Stories</div>
  </a>
  
  <a href="/admin/messages" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg transition border-l-4 border-orange-500">
    <div class="text-4xl font-bold text-orange-600"><%= @message_count %></div>
    <div class="text-gray-600 mt-2 font-semibold">Messages</div>
  </a>
  
  <a href="/admin/roadmap-ideas" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg transition border-l-4 border-red-500">
    <div class="text-4xl font-bold text-red-600"><%= @roadmap_idea_count %></div>
    <div class="text-gray-600 mt-2 font-semibold">Roadmap Ideas</div>
  </a>
  
  <a href="/admin/training-requests" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg transition border-l-4 border-teal-500">
    <div class="text-4xl font-bold text-teal-600"><%= @training_request_count %></div>
    <div class="text-gray-600 mt-2 font-semibold">Training Requests</div>
  </a>
  
  <a href="/admin/training-offerings" class="block p-6 bg-white rounded-lg shadow hover:shadow-lg transition border-l-4 border-indigo-500">
    <div class="text-4xl font-bold text-indigo-600"><%= @training_offering_count %></div>
    <div class="text-gray-600 mt-2 font-semibold">Training Offerings</div>
  </a>
</div>

<div class="mt-12">
  <h2 class="text-2xl font-bold mb-6">Quick Actions</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Import Stories -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold mb-4">ðŸ“– Import Stories from CSV</h3>
      <form action="/admin/import-stories" method="post" enctype="multipart/form-data">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">Select CSV File</label>
          <input type="file" name="csv_file" accept=".csv" required class="block w-full border rounded px-3 py-2">
        </div>
        <p class="text-xs text-gray-500 mb-4">CSV columns: title, content, author</p>
        <button type="submit" class="w-full bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700">Import Stories</button>
      </form>
    </div>

    <!-- Import Roadmap Ideas -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold mb-4">ðŸ’¡ Import Roadmap Ideas from CSV</h3>
      <form action="/admin/import-roadmap-ideas" method="post" enctype="multipart/form-data">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">Select CSV File</label>
          <input type="file" name="csv_file" accept=".csv" required class="block w-full border rounded px-3 py-2">
        </div>
        <p class="text-xs text-gray-500 mb-4">CSV columns: title, description, category</p>
        <button type="submit" class="w-full bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">Import Roadmap Ideas</button>
      </form>
    </div>
  </div>
</div>
