<% content_for :title, "Training Offerings - Admin" %>

<%= render 'admin/search_form', placeholder: 'Search training offerings...', width: 'w-64', show_button: true %>

<%= pagy_tailwind_nav(@pagy) if defined?(@pagy) %>

<div class="bg-white rounded-lg shadow max-h-[calc(100vh-14rem)] overflow-auto">
  <table class="min-w-full">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Topic</th>
        <th class="px-6 py-3 text-left text-left text-xs font-medium text-gray-500 uppercase">Instructor</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Created</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @training_offerings.each do |offering| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4"><%= offering.id %></td>
          <td class="px-6 py-4"><%= truncate(offering.topic, length: 40) %></td>
          <td class="px-6 py-4"><%= offering.availability || 'N/A' %></td>
          <td class="px-6 py-4"><%= offering.created_at.strftime("%Y-%m-%d") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= pagy_tailwind_nav(@pagy) if defined?(@pagy) %>
