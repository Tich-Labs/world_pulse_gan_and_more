<% content_for :title, "Messages - Mentorship Matchmaker" %>

<div class="container mx-auto py-8 px-4">
  <div class="mb-6">
    <h1 class="text-2xl font-bold">Messages</h1>
  </div>

  <div class="grid md:grid-cols-3 gap-6">
    <!-- Conversations List -->
    <div class="md:col-span-1">
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="p-4 border-b">
          <h2 class="font-semibold">Conversations</h2>
        </div>
        
        <% if @conversations.any? %>
          <div class="divide-y">
            <% @conversations.each do |conversation| %>
              <% other = conversation.other_participant(current_user) %>
              <% unread = conversation.unread_count_for(current_user) %>
              <%= link_to conversation_path(conversation), class: "block p-4 hover:bg-gray-50 #{unread > 0 ? 'bg-blue-50' : ''}" do %>
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 rounded-full bg-primary-custom flex items-center justify-center text-white font-bold flex-shrink-0">
                    <%= other.name.first.upcase %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex justify-between items-baseline">
                      <h3 class="font-medium truncate <%= unread > 0 ? 'font-bold' : '' %>"><%= other.name %></h3>
                      <span class="text-xs text-gray-500"><%= conversation.updated_at.strftime('%b %d') %></span>
                    </div>
                    <p class="text-sm text-gray-500 truncate">
                      <%= conversation.messages.last&.content || 'No messages yet' %>
                    </p>
                  </div>
                  <% if unread > 0 %>
                    <span class="bg-primary-custom text-white text-xs rounded-full px-2 py-1"><%= unread %></span>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="p-8 text-center text-gray-500">
            <p>No conversations yet</p>
            <p class="text-sm mt-2">Connect with someone to start messaging</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Welcome / Empty State -->
    <div class="md:col-span-2">
      <div class="bg-white rounded-lg shadow h-full flex items-center justify-center">
        <div class="text-center p-8">
          <p class="text-gray-500 text-lg">Select a conversation to start messaging</p>
        </div>
      </div>
    </div>
  </div>
</div>
